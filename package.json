{
  "name": "portable-messaging-app",
  "version": "1.0.0",
  "description": "Portable Desktop App for Google Messages",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "Josh Rodriguez / joshrod94",
  "license": "MIT",
  "devDependencies": {
    "electron": "^35.0.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-store": "^10.0.1"
  },
  "build": {
    "appId": "com.joshrod94.portable-messaging-app",
    "productName": "Portable Messaging App",
    "copyright": "Copyright Â© 2025 Josh Rodriguez",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/Messenger.ico"
    }
  }
}
